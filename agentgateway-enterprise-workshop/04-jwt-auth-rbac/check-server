#!/bin/bash
set -euxo pipefail

if ! kubectl get enterpriseagentgatewaypolicy agentgateway-jwt-auth -n agentgateway-system &>/dev/null; then
  fail-message "EnterpriseAgentgatewayPolicy 'agentgateway-jwt-auth' not found. Please create the JWT auth policy as shown in the instructions."
  exit 1
fi

echo "Challenge 4 complete!"
