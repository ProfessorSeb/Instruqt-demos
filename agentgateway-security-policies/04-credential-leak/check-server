#!/bin/bash
set -euxo pipefail

if [ ! -f /root/policies/credential-leak.yaml ]; then
  fail-message "Credential leak policy not found at /root/policies/credential-leak.yaml. Please create it as shown in the instructions."
  exit 1
fi

if ! grep -q "promptGuard" /root/policies/credential-leak.yaml; then
  fail-message "Policy file doesn't contain promptGuard configuration."
  exit 1
fi

if ! grep -q "Mask" /root/policies/credential-leak.yaml; then
  fail-message "Policy should use action: Mask to mask credentials in responses."
  exit 1
fi

if ! kubectl get enterpriseagentgatewaypolicy credential-leak-prevention -n default &>/dev/null; then
  fail-message "The credential-leak-prevention EnterpriseAgentgatewayPolicy is not applied to the cluster. Run: kubectl apply -f /root/policies/credential-leak.yaml"
  exit 1
fi

echo "Challenge 4 complete!"
