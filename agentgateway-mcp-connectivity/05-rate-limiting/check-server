#!/bin/bash
set -euxo pipefail

# Check rate limit policy exists
if ! kubectl -n agentgateway-system get agentgatewaypolicy mcp-rate-limit &>/dev/null; then
  fail-message "The mcp-rate-limit AgentgatewayPolicy was not found. Please create it as described."
  exit 1
fi

# Verify it has rateLimit configured
if ! kubectl -n agentgateway-system get agentgatewaypolicy mcp-rate-limit -o yaml | grep -q "rateLimit"; then
  fail-message "The mcp-rate-limit policy doesn't have rateLimit configured. Check the spec."
  exit 1
fi

echo "Rate limiting policy is configured correctly!"
