#!/bin/bash
set -euxo pipefail

# Source nvm for npx
export NVM_DIR="/root/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"

# Start MCP Inspector in background (port 6274)
nohup npx @modelcontextprotocol/inspector > /tmp/mcp-inspector.log 2>&1 &

kubectl wait --for=condition=Ready nodes --all --timeout=120s

echo "Challenge 2 setup complete"
