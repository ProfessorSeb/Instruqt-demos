#!/bin/bash
set -euxo pipefail
# Create secret
kubectl create secret generic openai-api-key \
  --namespace agentgateway-system \
  --from-literal=api-key="sk-demo-placeholder-key"

# Create Gateway
cat <<EOF | kubectl apply -f -
apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  name: ai-gateway
  namespace: agentgateway-system
spec:
  gatewayClassName: agentgateway
  listeners:
    - name: http
      protocol: HTTP
      port: 8080
EOF

# Wait for gateway
kubectl wait --for=condition=Programmed gateway/ai-gateway \
  -n agentgateway-system --timeout=60s

# Create Backend and HTTPRoute
cat <<EOF | kubectl apply -f -
apiVersion: gateway.networking.k8s.io/v1alpha2
kind: Backend
metadata:
  name: openai-backend
  namespace: agentgateway-system
spec:
  ai:
    llm:
      provider: openai
      apiKeySecretRef:
        name: openai-api-key
        key: api-key
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: openai-route
  namespace: agentgateway-system
spec:
  parentRefs:
    - name: ai-gateway
      namespace: agentgateway-system
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /openai
      backendRefs:
        - kind: Backend
          name: openai-backend
          namespace: agentgateway-system
EOF

# Verify
kubectl get gateway,backend,httproute -n agentgateway-system

# Port-forward and test
kubectl port-forward -n agentgateway-system svc/ai-gateway 8080:8080 &
sleep 3

curl -s http://localhost:8080/openai/v1/chat/completions \
  -H "Content-Type: application/json" \
  -d '{
    "model": "gpt-4o-mini",
    "messages": [{"role": "user", "content": "Hello!"}],
    "max_tokens": 50
  }' | jq . || true
